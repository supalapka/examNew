<Page x:Class="examNew.AllRecipes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:examNew"
      mc:Ignorable="d" Background="#7a7a7a"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllRecipes">

    <Grid>
        <ListView Name="dishList" Width="360" Background="#595959"  ItemsSource="{Binding DishesList}" SelectionChanged="dishList_SelectionChanged">
            <ListView.View >
                <GridView>
                    <GridViewColumn Header="Dish" Width="120" 
                        DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Kind of dish" Width="120"
                            DisplayMemberBinding="{Binding KindOfDish}"/>
                    <GridViewColumn Header="Type of dish"  Width="120"
                                       DisplayMemberBinding="{Binding TypeOfDish}"/>
                </GridView>
            </ListView.View>
            <ListView.Resources>
            </ListView.Resources>
        </ListView>
    </Grid>
</Page>
